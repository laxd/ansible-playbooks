[Unit]
Description=Starts and stops a single elasticsearch instance on this system
Documentation=http://www.elasticsearch.org

[Service]
Type=forking
EnvironmentFile={{ elasticsearch_environment_file }}
User={{ elasticsearch_user }}
Group={{ elasticsearch_group }}
PIDFile={{ elasticsearch_pid_file }}
ExecStart={{ elasticsearch_location }}/bin/elasticsearch -d -p {{ elasticsearch_pid_file }} -Des.default.config=$CONF_FILE -Des.default.path.home=$ES_HOME -Des.default.path.logs=$LOG_DIR -Des.default.path.data=$DATA_DIR -Des.default.path.work=$WORK_DIR -Des.default.path.conf=$CONF_DIR
# See MAX_OPEN_FILES in {{ elasticsearch_environment_file }}
LimitNOFILE=65535
# See MAX_LOCKED_MEMORY in {{ elasticsearch_environment_file }}, use "infinity" when     MAX_LOCKED_MEMORY=unlimited and using bootstrap.mlockall: true
#LimitMEMLOCK=infinity
# Shutdown delay in seconds, before process is tried to be killed with KILL (if configured)
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target
